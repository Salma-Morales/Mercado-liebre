        <label class="option-text" for="intereses"><input type="checkbox" name="intereses" value="Vida Sana">Vida Sana</label>
    </div>
    <div class="reg-labels">
        <label for="foto-usuario">Foto de perfil</label>
        <input type="file" name="foto-usuario" accept=".jpg">
    </div>
    <div class="reg-labels">
        <label for="password">Contraseña</label>
    
        <input class="text-area" type="password" name="password">
    </div>
    <div class="reg-labels">
        <label for="password-confirm">Confirmar contraseña</label>
        <input class="text-area" type="password" name="password-confirm">
    </div>
    <div>
        <input class="buttons" type="submit">
    </div>
    <div>
        <input class="buttons" type="reset">
    </div>
</div>
